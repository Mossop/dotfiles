#! /bin/bash

BOOKMARK="${1:-trunk()}"

OPERATIONS=`jj -R $JJ_WORKSPACE_ROOT op log --no-graph --at-op=@ --ignore-working-copy -T 'id ++ ":" ++ description ++ "\n"' | grep -A 1 -m 1 ":fetch from git remote" | sed -e 's/:.*$//g' | xargs echo`
read _ PARENT <<< "$OPERATIONS"
OLD_COMMIT=`jj -R $JJ_WORKSPACE_ROOT log --at-op=${PARENT} --ignore-working-copy -r "${BOOKMARK}" --no-graph -T 'commit_id'`
NEW_COMMIT=`jj -R $JJ_WORKSPACE_ROOT log --at-op=@ --ignore-working-copy -r "${BOOKMARK}" --no-graph -T 'commit_id'`

if [ "$OLD_COMMIT" == "$NEW_COMMIT" ]; then
  exit
fi

CHANGES=`jj -R $JJ_WORKSPACE_ROOT log --ignore-working-copy -r "${OLD_COMMIT}+ & mutable()" --no-graph -T 'change_id'`

if [ -z "$CHANGES" ]; then
  exit
fi

jj -R $JJ_WORKSPACE_ROOT rebase --skip-emptied -s "${OLD_COMMIT}+ & mutable()" -d ${BOOKMARK}
