#! /bin/bash

DIR=`pwd`
BASE=""

# Loop over the current directory and its parents
while [ "$DIR" != "/" ]; do
  if [ -e "$DIR/.jj" ]; then
    echo -n "[jj$BASE]"
    exit 0
  fi

  if [ -d "$DIR/.git" ]; then
    echo -n "[git$BASE]"
    exit 0
  fi

  if [ -d "$DIR/.hg" ]; then
    echo -n "[hg$BASE]"
    exit 0
  fi

  DIR=$(dirname "$DIR")
  BASE=":$(basename "$DIR")"
done
